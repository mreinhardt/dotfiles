### ALIASES ###

alias cmd='command'
alias g=$(command -v git)
alias la='ls -laFh'
alias lsb="echo 'Largest files'; ls -flh *(.OL[1,10])"
alias lst="echo 'Smallest files'; ls -Srl *(.oL[1,10])"
alias lsn="echo 'Newest files'; ls -rtlh *(D.om[1,10])"
