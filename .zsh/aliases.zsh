alias lsnd="echo 'Newest dirs'; ls -rthdl *(/om[1,10]) .*(D/om[1,10])"
alias lsod="echo 'Oldest dirs'; ls -rthdl *(/Om[1,10]) .*(D/Om[1,10])"
