#!/bin/bash

# Load resources
xrdb -merge .Xresources

# Rotate background
while true; do
    ln -sfv "$(find -L "$HOME/Pictures/backgrounds" -type f | sort -R | head -n1)" "$HOME/Pictures/.current_background"
    xli -onroot -fillscreen "$HOME/Pictures/.current_background"
    sleep 900
done &

# Start udiskie to handle media
udiskie &

# Fire up apps
xfce4-power-manager &

xscreensaver -no-splash &

conky &

if [ -x /usr/bin/nm-applet ] ; then
   nm-applet --sm-disable &
fi

exec xmonad
