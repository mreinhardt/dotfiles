    default_gauge_height = 56,
    default_gauge_width = 56,
    default_graph_height = 32,
    default_graph_width = 285,
    default_outline_color = 'cyan',
    default_shade_color = 'black',
    double_buffer = true,
    draw_borders = true,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'Noto Sans Mono CJK JP:size=10',
    format_human_readable = true,
    gap_x = 0,
    gap_y = 0,
